<li class="o-post">

  
    <% time = post.created_at %>
    <% content = post.content %>
    <% if not content == nil %>
    
    
     <div class="box25">
        <% if not time == nil %>
          <span class="box-title2"><%= post.number %>    <%= post.name %>   【<%= time.strftime("%Y-%m-%d") %>】</span>
        <% else %>
          <span class="box-title2"><%= post.number %>    <%= post.name %>   【<%= time %>】</span>
        <% end %>
        <p><%= simple_format(content) %></p>
     </div>
     
     <div class="box26">
       <span class="box-title">鬼和尚 【<%= post.oni_at.strftime("%Y-%m-%d") %>】</span>
       <p><%= simple_format(post.oni_content.gsub(" ","")) %></p>
     </div>
     
     
     <% else %>
     
     <div class="box26">
       <span class="box-title"><%= post.number %> 鬼和尚 【<%= post.oni_at.strftime("%Y-%m-%d") %>】</span>
       <p><%= simple_format(post.oni_content.gsub(" ","")) %></p>
     </div>
     
     <% end %>



</li>


